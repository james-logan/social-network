doctype html
html(lang="en-US", ng-app="socialNetwork")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title Social Network
    link(rel="stylesheet" href="lib/build.css")
    link(rel="stylesheet" href="css/main.css")
    link(href='http://fonts.googleapis.com/css?family=Courgette' rel='stylesheet' type='text/css')
  body
    .container
      nav
        ul
          li(ng-hide="auth"): a(href="/#/login") Login
          li(ng-show="auth"): a(href="/#/logout") Logout
          li: a(href="/#/potentialfriends") Browse Potential Friends
          li(ng-show="auth"): a(href="/#/friendslist") Friend List
          li: a(href="/#/profilepage") My Profile
          li: a(href="/#/profileform") Edit Profile
      .header
        h1 Social Network Profiles for Friendship Forever
      .app(ng-view)

  script(src="lib/build.js")
  script(src="js/main.js")
